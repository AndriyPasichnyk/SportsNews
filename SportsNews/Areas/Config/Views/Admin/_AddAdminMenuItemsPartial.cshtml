@model LayoutViewModel<InfoArchitectureViewModel>
<div class="modal fade" id="AddCategoryModal" tabindex="-1" role="dialog" aria-labelledby="addCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Add new category</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Name:</label>
                        <input type="text" class="form-control" id="add-category-name" asp-for="PageModel.SelectedCategory.NewName" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="add-category-button" asp-area="Config" asp-controller="@ControllersNames.Admin" asp-action="AddCategory">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="AddSubCategoryModal" tabindex="-1" role="dialog" aria-labelledby="addSubCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Add new subcategory</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Name:</label>
                        <input type="text" class="form-control" id="add-subcategory-name" asp-for="PageModel.SelectedSubCategory.NewName" />
                    </div>
                </div>
                <input type="hidden" asp-for="PageModel.SelectedCategory.Id" />
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="add-subcategory-button" asp-area="Config"  asp-controller="@ControllersNames.Admin" asp-action="AddSubCategory">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="AddTeamModal" tabindex="-1" role="dialog" aria-labelledby="addTeamModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Add new team</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Name:</label>
                        <input type="text" class="form-control" id="add-team-name" asp-for="PageModel.SelectedTeam.NewName" />
                    </div>
                    <input type="hidden" asp-for="PageModel.SelectedCategory.Id" />
                    <input type="hidden" asp-for="PageModel.SelectedSubCategory.Id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" id="add-team-button" asp-area="Config" asp-controller="@ControllersNames.Admin" asp-action="AddTeam">Add</button>
                </div>
            </form>
        </div>
    </div>
</div>
