@using SportsNews.Models
@model LayoutViewModel<LoginViewModel>
@{
    //var login = Model.PageModel;

    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
    <h3>@Model.Title</h3>
</p>
<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PageModel.Email"></label>
            </div>
            <div class="col">
                <input type="text" asp-for="PageModel.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="PageModel.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PageModel.Password"></label>
            </div>
            <div class="col">
                <input type="password" asp-for="PageModel.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="PageModel.Password"></span>
        </div>
        <div class="row form-check mb-2">
            <div class="col-2">
                <input type="checkbox" asp-for="PageModel.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="PageModel.RememberMe"></label>
            </div>
            <div class="col">

            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" asp-controller="Account" asp-action="Login" value="Log in"/>
            </div>
        </div>
        <br />
    </form>
</div>
