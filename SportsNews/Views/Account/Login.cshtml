@model LayoutViewModel<LoginViewModel>
<p>
    <h3>@Model.Title</h3>
</p>
<div class="container border" style="padding:20px">
    <form method="post" asp-antiforgery="true" asp-controller="Account" asp-action="Login">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PageModel.Email"></label>
            </div>
            <div class="col">
                <input type="text" asp-for="PageModel.Email" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="@Model.PageModel.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PageModel.Password"></label>
            </div>
            <div class="col">
                <input type="password" asp-for="PageModel.Password" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="PageModel.Password"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
            </div>
            <div class="col">
                <a asp-controller="Account" asp-action="ForgotPassword">Forgot password?</a>
            </div>
        </div>
        <div class="row form-check mb-2" hidden>
            <div class="col-2">
                <input type="checkbox" asp-for="PageModel.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="PageModel.RememberMe"></label>
            </div>
            <div class="col">
            </div>
        </div>
        <input type="hidden" asp-for="Title" />
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Log in" />
            </div>
        </div>
        <br />
    </form>
</div>

