@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model LayoutViewModel

@if (User.Identity.IsAuthenticated)
{
    if (!Model.IsAdminMode)
    {
        <form class="form-inline my-2 my-lg-0" style="text-align: left;">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">...</button>
        </form>
        @*<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>*@
        <div class="mr-2" style="text-align: left;">
            Social media section
        </div>
        <a class="btn btn-outline-success" style="text-align: right; margin-right: 5px;" asp-controller="Admin" asp-action="Index">=>A</a>
    }
    else
    {
        <a class="btn btn-outline-success" style="text-align: right; margin-right: 5px;" asp-controller="Home" asp-action="Index">=>U</a>
    }
    <div class="dropdown">
        <form method="post" class="form-inline" asp-controller="Account" asp-action="Logout">
            <button class="btn btn-outline-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img class="img-responsive" alt="" src="@string.Format("data:image/png;base64,{0}",@Convert.ToBase64String(Model.UserImg))" width="30" height="30" />
                <p style="font-size: small; font-weight: bold;">@HTMLUserHelper.GetUserFullNameFromClaims(Html, User)</p>
                @if (Model.IsAdminMode)
                {
                    <p style="font-size: x-small">Administrator</p>
                }
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <h6 class="dropdown-header">
                    <p>@HTMLUserHelper.GetUserFullNameFromClaims(Html, User)</p>
                    <p style="font-size: x-small">@User.Identity.Name</p>
                </h6>
                @if (!Model.IsAdminMode)
                {
                    <a class="dropdown-item" asp-controller="Account" asp-action="PersonalInfo">@Localizer["View profile"]</a>
                    <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">@Localizer["Change password"]</a>
                    <a class="dropdown-item" asp-controller="Account" asp-action="UserSurveys">@Localizer["My surveys"]</a>
                    <a class="dropdown-item" asp-controller="Account" asp-action="UserTeamHub">@Localizer["Team hub"]</a>
                }
                <div class="dropdown-divider"></div>
                <button class="dropdown-item" type="submit" asp-controller="Account" asp-action="Logout">@Localizer["Log out"]</button>
            </div>
        </form>
    </div>
    <div class="dropdown" align="right">
        <button class="btn btn-outline-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            @Model.Language
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            @if (@Model.Languages != null)
            {
                foreach (var item in Model.Languages)
                {
                    if (item.IsEnabled)
                    {
                        <a class="dropdown-item" asp-controller="Language" asp-action="Change" asp-route-id="@item.Id">@item.Abbreviation</a>
                    }
                }
            }
            else
            {
                <a class="dropdown-item" asp-controller="Language" asp-action="Change" asp-route-id="0">EN</a>
                <a class="dropdown-item" asp-controller="Language" asp-action="Change" asp-route-id="1">DE</a>
                <a class="dropdown-item" asp-controller="Language" asp-action="Change" asp-route-id="2">FR</a>
            }
        </div>
    </div>
}
else
{
    if (Model.Title == "Create Account")
    {
        <div class="container" style="text-align: right;">
            Already Have an account? <a class="btn btn-outline-success" style="margin-right: 5px;" asp-controller="Account" asp-action="Login">Log in</a>
        </div>
    }
    else if (Model.Title == "Log in to Sports News")
    {
        <div class="container" style="text-align: right;">
            Don't have an account? <a class="btn btn-outline-success" style="margin-right: 5px;" asp-controller="Account" asp-action="RegisterUser">Get Started</a>
        </div>
    }
    else
    {
        <div class="container" style="text-align: right;">
            <a class="btn btn-outline-success" style="margin-right: 5px;" asp-controller="Account" asp-action="RegisterUser">Sign Up</a>
            <a class="btn btn-outline-success" style="margin-right: 5px;" asp-controller="Account" asp-action="Login">Log in</a>
        </div>
    }
}
