@model LayoutViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container container-inherit">
                <a class="navbar-brand" style="color: white; width: inherit; margin-right: unset; font-weight: bold;" asp-area="" asp-controller="Home" asp-action="Index">Sports Hub</a>
            </div>
            <div class="container">
                <partial name="_NavigationPartial" />
            </div>
        </nav>
    </header>

    <div class="container" style="display: flex;">
        @if (Model.IsAdminMode)
        {
            if (Model.Menu != null)
            {
                <div class="col-4" style="max-width: 260px; min-width: 260px; text-align: left">
                    <div class="list-group" id="list-tab" role="tablist">
                        @foreach (var item in Model.Menu)
                        {
                            <a class="list-group-item list-group-item-action @(Model.Title == item.Title ? "active" : string.Empty)" asp-controller="@ControllersNames.Admin" asp-action="@item.Action">@item.Title</a>
                        }
                    </div>
                </div>
            }
        }
        else if (Model.Title != "LogInAccount" && Model.Title != "CreateAccount" && Model.Title != "ForgotPassword" &&
            Model.Title != "ForgotPasswordConfirmation" && Model.Title != "ResetPassword")
        {
            <div class="col-4" style="max-width: 275px; min-width: 275px; padding-right: unset; text-align: left ">
                <div class="list-group" id="list-tab" role="tablist">
                    <a class="list-group-item list-group-item-action active" id="list-home-list" asp-controller="@ControllersNames.Home" asp-action="Index">HOME</a>
                    @foreach (var item in Model.UserMenu)
                    {
                        if (item.IsVisible)
                        {
                            if (item.IsStatic)
                            {
                                <a class="list-group-item list-group-item-action" id="list-home-list-@item.Id" asp-controller="@item.Name" asp-action="Index">@item.Name</a>
                            }
                            else
                            {
                                if (item.Subcategories != null && item.Subcategories.Count() != 0)
                                {
                                    <div class="btn-group dropright">
                                        <button type="button" class="btn btn-light dropdown-toggle" style="text-align: left;" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@item.Name</button>
                                        <div class="dropdown-menu">
                                            @foreach (var subs in item.Subcategories)
                                            {
                                                <a class="dropdown-item" href="#">@subs.Name</a>
                                            }
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <a class="list-group-item list-group-item-action list-group-item-light" id="list-home-list-@item.Id">@item.Name</a>
                                }
                            }
                        }
                    }
                </div>
            </div>
        }

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Copyright &copy; 2022 Sports News
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy / Terms</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAbunj4Bfz4rlAuB1Ril6g5eJUed5hdVXA"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
